<div class="header_menu">
  <%= link_to 'New Note', new_as_note_path, :class=>"menu_link" %> &nbsp;
  <%= link_to 'Following Notes', following_as_notes_path, :class=>"menu_link" %> &nbsp;
  <%= link_to 'Public notes', public_as_notes_path, :class=>"menu_link" %> &nbsp;
  <%= link_to 'Following users', following_users_path, :class=>"menu_link" %> &nbsp;
  <%= link_to 'All users', all_users_path, :class=>"menu_link" %>
</div>

<div id="notes_list">
  <div class="list_head">
    Total:  <%= @total %> Notes
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= paginate @as_notes %>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

    <%= form_tag as_notes_path, :method=>"get" do %>
      <%= select_tag(:label,options_for_select(@labels_select,@label_selected)) %>
      <%= text_field_tag(:search, @search,:size=>"15") %>
      <%= submit_tag "Search", :name=>nil %>
    <% end %>

  </div>

  <div id="notes_main">
    <%= render "list" %>
  </div>
</div>

