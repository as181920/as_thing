<div id="notes_list">
  <div class="list_head">
    Total:  <%= @total %> Notes
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= paginate @as_notes %>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

    <%= form_tag as_notes_path, :method=>"get" do %>
      <%= select_tag(:label,options_for_select(@labels_select,@label_selected)) %>
      <%= text_field_tag(:search, @search,:size=>"15") %>
      <%= submit_tag "Search", :name=>nil %>
    <% end %>

  </div>

  <%= render "list" %>
</div>

<div class="side_menu">
  <ul>
    <li>
    <%= link_to 'New Note', new_as_note_path, :class=>"menu_link" %> 
    </li>
    <li>
      <%= link_to 'View public notes', "public", :class=>"menu_link" %> 
    </li>
    <li>
      <%= link_to 'View following users', all_users_path, :class=>"menu_link" %> 
    </li>
    <li>
      <%= link_to 'View all users', all_users_path, :class=>"menu_link" %>
    </li>
  </ul>
</div>

