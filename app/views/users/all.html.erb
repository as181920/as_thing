
<div class="header_menu">
  <%= link_to 'My Notes', as_notes_path, :class=>"menu_link" %> &nbsp;
  <%= link_to 'Followed Notes', as_notes_path, :class=>"menu_link" %> &nbsp;
  <%= link_to "Followed Users's Notes", all_users_path, :class=>"menu_link" %> &nbsp;
  <%= link_to "Followers's Notes", all_users_path, :class=>"menu_link" %> &nbsp;
  <%= link_to 'Public notes', "public", :class=>"menu_link" %> &nbsp;
  <%= link_to 'Followed users', all_users_path, :class=>"menu_link" %> &nbsp;
  <%= link_to 'Followers', all_users_path, :class=>"menu_link" %> &nbsp;
  <%= link_to 'All users', all_users_path, :class=>"menu_link" %>
</div>

<div id="users_list">
  <div class="list_head">
    Total:  <%= @total %> users
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= paginate @users %>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

    <%= form_tag all_users_path, :method=>"get" do %>
      <%= select_tag(:user_attr,options_for_select(@select_array,@selected)) %>
      <%= text_field_tag(:search, @search,:size=>"15") %>
      <%= submit_tag "Search", :name=>nil %>
    <% end %>
  </div>

  <div id="users_main">
    <ul>
    <% @users.each do |user| %>
      <%= content_tag_for :li, user do %>
        <%= link_to user.email, user_path(user) %> &nbsp;&nbsp;&nbsp;<div class="followmenu">Follow/Unfollow</div>
        <br />
      <% end %>
    <% end %>
    </ul>
  </div>
</div>

