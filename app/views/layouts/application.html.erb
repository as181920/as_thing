<!DOCTYPE html>
<html>
<head>
  <title>AsThing</title>
  <link rel="shortcut icon" type="images/x-icon"  href="/images/favicon.ico" />
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "jquery-ui-timepicker-addon" %>
  <%= csrf_meta_tag %>
  <%= include_tiny_mce_if_needed %>

</head>
<body>
  <div id="container">

    <div id="header">
    &nbsp;

      <div id="sub_header_left">
        <%= link_to "Notes", as_notes_path %>
        <% flash.each do |name,msg| %>
          <%= content_tag :div, msg, :id=>"flash#{name}" %>
        <% end %>
      </div>

      <div id="sub_header_right">
        <% if current_user %>
          <%= user_display_name %> <BR/>
          <div class="usermenu">
            <%= link_to "Setting", edit_user_path(current_user) %> <BR/>
            <%= link_to "Log out", log_out_path %>
          </div>
        <% else %>
          <%= link_to "Log in", log_in_path %> or 
          <%= link_to "Sign up", sign_up_path %>
        <% end %>
      </div>

    </div>


    <div id="main_content_top">
    </div>

    <div id="main_content">

      <%= yield %>

      <div id="clear"></div>

    </div>

    <div id="main_content_bottom">
    </div>

    <div id="footer">
      <p>Any question please mail to:<strong>as181920@hotmail.com</strong></p>
    </div>

  </div>
</body>
</html>
